# Install dependencies
FROM ubuntu:latest

RUN apt-get update
RUN DEBIAN_FRONTEND="noninteractive" TZ="Europe/London" apt-get install -y curl git wget unzip libgconf-2-4 gdb libstdc++6 libglu1-mesa fonts-droid-fallback lib32stdc++6 python3 psmisc python3-venv
RUN apt-get install -y software-properties-common && \
    add-apt-repository -y ppa:alex-p/tesseract-ocr
RUN apt-get install -y tesseract-ocr-all poppler-utils
RUN apt-get clean

# Clone the flutter repo
RUN git clone https://github.com/flutter/flutter.git /usr/local/flutter

# Set flutter path
ENV PATH="/usr/local/flutter/bin:/usr/local/flutter/bin/cache/dart-sdk/bin:${PATH}"

# Enable flutter web
RUN flutter channel master
RUN flutter upgrade
RUN flutter config --enable-web

# Run flutter doctor
RUN flutter doctor -v


RUN python3 -m venv .env
COPY requirements.txt .
RUN .env/bin/pip install -r requirements.txt

COPY . .

RUN cd ocr_service && \
    uvicorn main:app --reload &

RUN flutter pub get && \
    flutter build web

EXPOSE 5001

CMD ["flutter", "pub", "global", "run", "webdev", "serve", "0.0.0.0:5001"]
